<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8ffb2">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mehdi"
            android:id="@+id/table_professor_first_name"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" "
            android:id="@+id/textView10"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mekni"
            android:id="@+id/table_professor_last_name"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contextClickable="false"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Office: "
                android:id="@+id/textView12"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ECC 234"
                android:id="@+id/professor_office"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:gravity="bottom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contextClickable="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Phone: "
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="(320)308-3737"
                android:id="@+id/professor_phone"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:gravity="bottom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contextClickable="false" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Email: "
                android:id="@+id/textView13"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="mmekni@stcloudstate.edu"
                android:id="@+id/professor_email"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:gravity="bottom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contextClickable="false" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Web: "
                android:id="@+id/textView14"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="http://web.stcloudstate.edu/mmekni"
                android:id="@+id/professor_website"
                android:layout_gravity="center_horizontal"
                android:textSize="15dp"
                android:gravity="left|bottom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contextClickable="false" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Degree: "
                android:id="@+id/textView15"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Ph.D. 2010, Laval University Canada"
                android:id="@+id/professor_degree"
                android:layout_gravity="center_horizontal"
                android:textSize="15dp"
                android:gravity="left|bottom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contextClickable="false" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Interest: "
                android:id="@+id/textView16"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="spatial modelling and simulation using artificial intelligence and visualization techniques"
                android:id="@+id/professor_interest"
                android:layout_gravity="center_horizontal"
                android:textSize="15dp"
                android:gravity="left|bottom" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/office_hour"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/separate_line"
            android:background="#46a510" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Weekday"
                android:textSize="20dp"
                android:background="#b3d4fc"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Office Hour"
            android:textSize="20dp"
            android:background="#ffc024"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/textView4"
            android:background="#46a510" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Monday"
                android:textSize="20dp"
                android:background="#b3d4fc"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="12pm - 1pm"
                android:textSize="20dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/monday_oh"
                android:background="#ffc024" />
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/textView5"
            android:background="#46a510" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tuesday"
                android:textSize="20dp"
                android:background="#b3d4fc"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2:30pm - 4pm"
                android:textSize="20dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tuesday_oh"
                android:background="#ffc024" />
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/textView6"
            android:background="#46a510" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Wednesday"
                android:textSize="20dp"
                android:background="#b3d4fc"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1pm - 2pm"
                android:textSize="20dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/wednesday_oh"
                android:background="#ffc024" />
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/textView7"
            android:background="#46a510" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thursday"
                android:textSize="20dp"
                android:background="#b3d4fc"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3:30pm - 4pm"
                android:textSize="20dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/thursday_oh"
                android:background="#ffc024" />
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/textView8"
            android:background="#46a510" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Friday"
                android:textSize="20dp"
                android:background="#b3d4fc"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="11am-12pm, 3pm-4pm"
                android:textSize="20dp"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/friday_oh"
                android:background="#ffc024" />
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/textView9"
            android:background="#46a510" />

    </TableLayout>
</LinearLayout>